@model IEnumerable<Single_Capstone.Models.InventoryProducts>

@{
    ViewBag.Title = Html.DisplayNameFor(model => model.GetDate);
}

<h2>Inventory Details</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Units)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalValueOfProducts)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProfitToBeMadePerUnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GMROI)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParLevel)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Units)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProductName)
    </td>
    <td>
        <span>$</span>
        @Html.DisplayFor(modelItem => item.TotalValueOfProducts)
    </td>
    <td>
        <span>$</span>
        @Html.DisplayFor(modelItem => item.ProfitToBeMadePerUnit)
    </td>
    <td>
        <span>$</span>
        @Html.DisplayFor(modelItem => item.GMROI)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ParLevel)
    </td>
    <td>
        <a href="@Url.Action("Edit", "InventoryProduct", new { id = item.Id }, null)" class="btn btn-info">Take Count</a>
    </td>
</tr>
}

</table>
<a href="@Url.Action("Index", "Inventory")" class="btn btn-info btn-lg btn-block">Back</a>
