@model IEnumerable<Single_Capstone.Models.InventoryProducts>

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Units)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GetDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ProductName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Units)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GetDate)
    </td>
    <td>
        <div class="btn-group">
            <a class="btn btn-info" value="Create" onclick="location.href='@Url.Action("AddInventory", new { id = item.Id })'">Add Units</a>
            <a href="#" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li class="divider"></li>
                <li><a href="@Url.Action("PastHistoricalDataForSpecificProduct", "Chart", new { id = item.Id }, null)">View Trends</a></li>
            </ul>
        </div>
    </td>
</tr>
}

</table>

