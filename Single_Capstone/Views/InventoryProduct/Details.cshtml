    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ProductName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Units)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GetDate)
    </td>
